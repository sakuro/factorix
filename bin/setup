#!/usr/bin/env bash

# ANSI color codes
CYAN=$'\033[36m'
MAGENTA=$'\033[35m'
RESET=$'\033[0m'

# prefix for -x
PS4="${CYAN}[$(basename $0)]${RESET} "
# prefix for stdout
exec > >(sed -e "s/^/${MAGENTA}[$(basename $0)]${RESET} /")

IFS=$'\n\t'
set -euxo pipefail

bundle install
# Do any other automated setup that you need to do here
