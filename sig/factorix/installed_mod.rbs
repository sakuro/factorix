module Factorix
  class InstalledMOD
    include Comparable

    ZIP_FORM: Symbol

    DIRECTORY_FORM: Symbol

    def self.from_zip: (Pathname path) -> InstalledMOD

    def self.from_directory: (Pathname path) -> InstalledMOD

    # Scanner for finding installed MODs
    class Scanner
      # Provided by Factorix::Import[:runtime, :logger]
      attr_reader runtime: Runtime::Base
      attr_reader logger: Dry::Logger::Dispatcher

      def scan: () -> Array[InstalledMOD]
    end

    attr_reader mod: MOD
    attr_reader version: Types::MODVersion
    attr_reader form: Symbol
    attr_reader path: Pathname
    attr_reader info: Types::InfoJSON

    def <=>: (InstalledMOD other) -> Integer?
  end
end
